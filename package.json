    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.15.30",
    "gh-pages": "^6.3.0",
    "svelte": "^5.28.1",
    "svelte-check": "^4.1.6",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}

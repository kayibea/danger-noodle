{
  "name": "danger-noodle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://kayibea.github.io/danger-noodle",
  "scripts": {
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
